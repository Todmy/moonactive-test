{
  "plugins": ["node", "security"],
  "extends": [
      "eslint:recommended",
      "plugin:node/recommended-script",
      "plugin:security/recommended",
      "airbnb-base/legacy"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2020
  },
  "rules": {
      "semi": ["error", "always"],
      "node/no-deprecated-api": "error",
      "eol-last": ["error", "always"],
      "comma-dangle": ["error", "always-multiline"]
  }
}